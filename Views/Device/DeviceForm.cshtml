@model Gateways.Models.DevicePureViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var text = (Model.Vendor == null) ? "Create Device" : "Edit Device";
}
<h2>@text</h2>

@using (Html.BeginForm("Save", "Device", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Vendor)
        @Html.TextBoxFor(m => m.Vendor, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Vendor)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Uid)
        @Html.TextBoxFor(m => m.Uid, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Uid)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsOnline) Online
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GatewayId)
        @Html.DropDownListFor(m => m.GatewayId, new SelectList(Model.Gateways, "Id", "Name"), "Select Gateway", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GatewayId)
        @Html.HiddenFor(m => m.Id)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
